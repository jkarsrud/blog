{{> header}}
<section id="primary" class="col-lg-9">
{{#each collections.posts}}
  <article class="post">
    <header>
      <h2 class="post-title"><a href="{{this.path}}">{{this.title}}</a></h2>
      <p class="post-meta small">Posted on: <time>{{moment this.date format="DD.MM.YYYY"}}</time> by <a href="#">{{this.author}}</a></p>
    </header>
    {{#if this.image}}
      <img src="{{this.image}}" class="img-responsive img-thumbnail"/>
    {{/if}}
    <p class="lead">{{{this.excerpt}}}</p>
  </article>
{{/each}}
</section>
{{> footer}}